@model List<BookStore.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
    Layout = "_LayoutAdmin";
}

<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total</th>
            <th>Name customer</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderPlaced.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@order.OrderTotal.ToString("c")</td>
                <td>
                @if (order.User != null)
                {
                    <span>@order.User.UserName</span>
                }
                
                <td>
                              <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-lg"><i class="fa-solid fa-delete-left"></i></a>  |
                              <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-success btn-lg"><i class="fa-solid fa-circle-info"></i></a> 
                          </td>
            </tr>
        }
    </tbody>
</table>
